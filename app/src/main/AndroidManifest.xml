<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.haki">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Incidences">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.haki.IncidenceReceived">

            </meta-data>
        </activity>
        <activity android:name=".IncidenceReceived">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.haki.ReportCrime">

            </meta-data>
        </activity>
        <activity android:name=".ReportCrime">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.haki.MainActivity"></meta-data>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>